{
  "name": "@scals/preview",
  "version": "0.1.0",
  "type": "module",
  "description": "SCALS WebAssembly preview renderer - render SCALS JSON documents to HTML",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:wasm": "./build-wasm.sh",
    "build:js": "tsc && rollup -c",
    "build": "npm run build:wasm && npm run build:js",
    "clean": "rm -rf dist .build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "scals",
    "server-driven-ui",
    "webassembly",
    "wasm",
    "react",
    "preview",
    "renderer"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "rollup": "^4.9.0",
    "tslib": "^2.6.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@wasmer/wasi": "^1.2.2"
  }
}
